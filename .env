# --- SYSTEM CONFIGURATION ---
PROJECT_NAME="Speech2Translate"
ENVIRONMENT="development"
DEBUG=True

# --- NETWORK CONFIGURATION ---
BACKEND_URL="http://localhost:8000"
ALLOWED_ORIGINS="http://localhost,http://127.0.0.1"

# --- AI MODEL CONFIGURATION (SOTA) ---
